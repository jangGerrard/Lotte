<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00bcd4" android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_centerInParent="true"
                android:id="@+id/linearLayout">
                <LinearLayout
                    android:layout_width="330dp" android:layout_height="wrap_content"
                    android:orientation="vertical" android:background="#ffffff"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp" android:paddingTop="20dp"
                        android:paddingLeft="10dp" android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_person_black_24dp"/>
                        <EditText
                            android:id="@+id/resister_username"
                            android:hint="Username(영어,숫자)"
                            android:textSize="15dp"
                            android:textColorHint="#757575"
                            android:textColor="#757575"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical" />
                        <Button
                            android:id="@+id/button_id_check"
                            android:text="ID CHECK"
                            android:textSize="15dp"
                            android:textColor="#ffffff"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/button_blue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp" android:paddingTop="10dp"
                        android:paddingLeft="10dp" android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_email_black_24dp"/>
                        <EditText
                            android:id="@+id/resister_email"
                            android:hint="Email Address"
                            android:textSize="15dp"
                            android:textColorHint="#757575"
                            android:textColor="#757575"
                            android:inputType="textEmailAddress"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical" />
                        <Button
                            android:id="@+id/button_email_check"
                            android:text="EMAIL CHECK"
                            android:textSize="15dp"
                            android:textColor="#ffffff"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/button_blue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp" android:paddingTop="10dp"
                        android:paddingLeft="10dp" android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_https_black_24dp"/>
                        <EditText
                            android:id="@+id/resister_password"
                            android:hint="Password(6글자 이상)"
                            android:textSize="15dp"
                            android:textColorHint="#757575"
                            android:textColor="#757575"
                            android:inputType="textPassword"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp" android:paddingTop="10dp"
                        android:paddingLeft="10dp" android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_https_black_24dp"/>
                        <EditText
                            android:id="@+id/resister_repeat"
                            android:hint="Repeat Password"
                            android:textSize="15dp"
                            android:textColorHint="#757575"
                            android:textColor="#757575"
                            android:inputType="textPassword"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:paddingTop="10dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/button_login"
                        android:text="LOGIN"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/button_green"/>

                    <Button
                        android:id="@+id/button_forgot"
                        android:text="FORGOT PASSWORD?"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_orange"/>
                </LinearLayout>
            </LinearLayout>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_white_18dp"
                app:fab_colorNormal="#F44336"
                app:fab_colorPressed="#D84315"
                app:fab_colorRipple="#F44336"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>